<?xml version='1.0' encoding='utf-8'?>
<widget id="com.carrentals.webapp" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Carrentals</name>
    <description>
        Carrentals.com wrapped webapp
    </description>
    <author email="dev.artem.kuznetsov-gmail.com" href="">
        Artem Kuznetsov
    </author>
    <content src="index.html" />
    <access origin="*" />
    <access launch-external="yes" origin="mailto:*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="" />
    <platform name="android">
        <allow-intent href="market:*" />

        <!-- Icon -->
        <icon src="www/img/android/drawable-ldpi/icon.png" density="ldpi" />
        <icon src="www/img/android/drawable-mdpi/icon.png" density="mdpi" />
        <icon src="www/img/android/drawable-hdpi/icon.png" density="hdpi" />
        <icon src="www/img/android/drawable-xhdpi/icon.png" density="xhdpi" />

        <!-- splash -->
        <splash src="www/img/android/drawable-hdpi/screen.png" density="port-hdpi"/>
        <splash src="www/img/android/drawable-ldpi/screen.png" density="port-ldpi"/>
        <splash src="www/img/android/drawable-mdpi/screen.png" density="port-mdpi"/>
        <splash src="www/img/android/drawable-xhdpi/screen.png" density="port-xhdpi"/>

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <!-- Icon -->
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="www/img/ios/icon-60-3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="www/img/ios/icon-60.png" width="60" height="60" />
        <icon src="www/img/ios/icon-60-2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="www/img/ios/icon-76.png" width="76" height="76" />
        <icon src="www/img/ios/icon-76-2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="www/img/ios/icon-40.png" width="40" height="40" />
        <icon src="www/img/ios/icon-40-2x.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="www/img/ios/icon.png" width="57" height="57" />
        <icon src="www/img/ios/icon-2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="www/img/ios/icon-72.png" width="72" height="72" />
        <icon src="www/img/ios/icon-72-2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="www/img/ios/icon-small.png" width="29" height="29" />
        <icon src="www/img/ios/icon-small-2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="www/img/ios/icon-50.png" width="50" height="50" />
        <icon src="www/img/ios/icon-50-2x.png" width="100" height="100" />

        <!-- splash -->
        <splash src="www/img/ios/Default~iphone.png" width="320" height="480"/>
        <splash src="www/img/ios/Default-2x~iphone.png" width="640" height="960"/>
        <splash src="www/img/ios/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="www/img/ios/Default-Portrait-2x~ipad.png" width="1536" height="2048"/>
        <splash src="www/img/ios/Default-568h-2x~iphone.png" width="640" height="1136"/>
        <!--<splash src="www/img/ios/Default-667h.png" width="750" height="1334"/>-->
        <!--<splash src="www/img/ios/Default-736h.png" width="1242" height="2208"/>-->
    </platform>
    <engine name="android" spec="^4.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-network-information" spec="^1.1.0" />
    <plugin name="cordova-plugin-statusbar" spec="^2.0.0" />
    <plugin name="cordova-plugin-device" spec="https://git-wip-us.apache.org/repos/asf/cordova-plugin-device.git" />
    <plugin name="cordova-plugin-dialogs" spec="~1.2.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~3.0.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.3.0" />
</widget>
